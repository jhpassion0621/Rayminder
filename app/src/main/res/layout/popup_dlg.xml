<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:id="@+id/lblCaption"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:text="You have successfuly \nset the reminder to"/>

            <TextView
                android:id="@+id/lblReminderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:text="Go For Movie Jurassic World"/>

            <TextView
                android:id="@+id/lblShareOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:singleLine="true"
                android:textSize="15sp"
                android:gravity="center_horizontal"
                android:text="Share on"/>


            <LinearLayout
                android:id="@+id/lytSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivShareGoogle"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/icon_share_pop_google_plus_off"
                    />
                <ImageView

                    android:id="@+id/ivShareFB"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_share_pop_facebook_on"
                    />
                <ImageView

                    android:id="@+id/ivShareIn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_share_pop_linkedin_off"
                    />
                <ImageView

                    android:id="@+id/ivShareTwitter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_share_pop_twitter_off"
                    />
                <ImageView

                    android:id="@+id/ivShareWhat"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/icon_share_pop_whatsapp_off"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lytButtonGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">
                <Button
                    android:id="@+id/btnShare"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/button_dlg_bg" />
                <Button
                    android:id="@+id/btnSkip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I'll Skip"
                    android:textColor="@color/white"
                    android:background="@drawable/button_dlg_cancel_bg" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>